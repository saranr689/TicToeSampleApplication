<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/gameresult_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taasdasd"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart"
        android:background="@color/com_facebook_button_login_silver_background_color_pressed"
        android:id="@+id/restart"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/gameresult_textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/com_facebook_button_login_silver_background_color_pressed"
        android:text="Exit"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/restart"
        android:layout_alignStart="@+id/restart" />
    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WON"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/gameresult_textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>